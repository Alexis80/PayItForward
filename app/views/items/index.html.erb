<u1 class="items">
<center>
<% provide(:title, 'Item List')%>
<h1> Items Needed</h1>


<ul class="items">
  <% @items.each do |item| %>
  <% if (current_user.id == item.user_id) && (item.extra == false) %>
    <li>
      <span class="name"><%= item.name %></span>
      <span class="description"><%= item.description %></span>
     
    |  <%= link_to("edit", edit_item_path(item), :class => 'action edit') %>
     | <%= link_to "delete", item, method: :delete,
                                  data: { confirm: "Are you sure you wish to delete this item?" }  %>
    </li>
  <% end %>
  <% end %>

  <%= link_to("Add New Item", new_item_path, :class => 'action new') %>

<h2> Items to be Donated </h2>
</ul>
<ul class="items">
  <% @items.each do |item| %>
  <% if (current_user.id == item.user_id ) && (item.extra == true)  %>
    <li>
      <span class="name"><%= item.name %></span>
      <span class="description"><%= item.description %></span>

    |  <%= link_to("edit", edit_item_path(item), :class => 'action edit') %>
     | <%= link_to "delete", item, method: :delete,
                                  data: { confirm: "Are you sure you wish to delete this item?" }  %>
    </li>
  <% end %>
  <% end %>
<%= link_to("Add New Item", new_item_path, :class => 'action new') %>
</center>

</u1>
