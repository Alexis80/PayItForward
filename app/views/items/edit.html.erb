<%page_title = "Edit Item" %>

<%= link_to("<< Back to List", items_path, :class => 'back-link') %>

<div class="items edit">
  <h2>Edit Item</h2>

  <%= form_for(@item, :url => item_path) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= f.submit("Update Item") %>
    </div>

  <% end %>
</div>
